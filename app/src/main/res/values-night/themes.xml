<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Sapp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/magenta</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/custom_btm_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Greetings">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding</item>
    </style>
</resources>